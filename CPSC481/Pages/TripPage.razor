@page "/trips/0"

@*<PageTitle>@tripName</PageTitle>*@

<div class="page-container" >
    <div class="page-header">
        <button type="button" class="btn btn-round">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
            </svg>
        </button>
        <p class="text-wrap fs-4 fw-bold page-title">Summer Holiday Trip</p>
    </div>
    <div class="page-body">
        <CPSC481.Components.DayPlans planDate="@date1" />
        <hr/>
        <CPSC481.Components.DayPlans planDate="@date2" />
        <hr />
        <CPSC481.Components.DayPlans planDate="@date3" />
    </div>
    <div class="btn-fixed dropdown">
        <button class="btn btn-round btn-dark" type="button" data-bs-toggle="dropdown">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
            </svg>
        </button>
        <ul class="dropdown-menu dropdown-menu-dark">
            <li><a class="dropdown-item" href="AddPlan">Add Plan</a></li>
            <li><a class="dropdown-item" href="QuickStart">Quick Add</a></li>
        </ul>
    </div>
</div>

@code {
    //[Parameter]
    //public string tripName { get; set; } = "";

    private string date1 = "April 28, 2022";
    private string date2 = "May 2, 2022";
    private string date3 = "July 15, 2022";
}
